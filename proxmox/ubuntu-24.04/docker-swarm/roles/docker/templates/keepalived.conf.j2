! Configuration File for keepalived

vrrp_script chk_docker {
    script "pidof dockerd"
    interval 2
    weight 2
}

vrrp_instance VI_1 {
    state BACKUP
    interface {{ ansible_default_ipv4.interface }}
    virtual_router_id {{ virtual_router_id }}
    priority 100
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass {{ auth_pass }}
    }
    virtual_ipaddress {
        {{ vip_address }}
    }
    track_script {
        chk_docker
    }
}