# Example Packer Variables File
# Copy this file to secrets.pkrvars.hcl and replace with your actual values
# secrets.pkrvars.hcl is git-ignored and will not be committed

# Proxmox API password for authentication
proxmox_password = "your-proxmox-password-here"

# SSH password for the Ubuntu user during VM installation
# This should be a temporary password used during provisioning
ssh_password = "your-temporary-ssh-password"

# Hashed password for the Ubuntu user
# Generate with: mkpasswd -m sha-512
# Or on systems without mkpasswd: python3 -c 'import crypt; print(crypt.crypt("yourpassword", crypt.mksalt(crypt.METHOD_SHA512)))'
user_password_hash = "$6$rounds=4096$saltsaltsal$hashedpasswordgoeshere"
